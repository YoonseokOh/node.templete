{{#extend "script" "intercom"}}
  {{#if (cfg "intercom.appId")}}
    <script>
      (function() {
        var w = window;
        var ic = w.Intercom;

        var intercomInfo = {
          appId: '{{cfg 'intercom.appId'}}'
        };

        var userAgent = '[{{userAgent}}] ';
        var uuidCookie = '{{cfg 'client.cookie.uuid'}}';
        var uuid = $.cookie(uuidCookie);

        {{#if user}}
          intercomInfo.userId = '{{user.id}}';
          intercomInfo.email = '{{user.email}}';
          intercomInfo.name = userAgent + '{{user.name}} (Token:' + uuid;
        {{else}}
          if (uuid) {
            var userDate = new Date(Number(uuid) / 1000);
            var a = '' + (userDate.getMonth() + 1 > 9 ? userDate.getMonth() + 1 : '0' + (userDate.getMonth() + 1));
            var b = '' + (userDate.getHours() > 9 ? userDate.getHours() : '0' + userDate.getHours());
            var c = '' + Number(uuid) % 1000;
            var d = '' + (userDate.getDate() > 9 ? userDate.getDate() : '0' + userDate.getDate());
            if (Number(c) < 10) {
              c = '00' + c
            } else if (Number(c) < 100) {
              c = '0' + c
            }
            intercomInfo.name = userAgent + userDate.getFullYear() + a + d + ' Number:' + b + c + ' - Token:' + uuid;
          } else {
            intercomInfo.name = userAgent + 'no userinfo - ' + new Date();
          }
        {{/if}}

        window.intercomSettings = intercomInfo;

        if (typeof ic === "function") {
          ic('reattach_activator');
          ic('update',intercomSettings);
        } else {
          var d = document;
          var i = function() {
            i.c(arguments)
          };

          i.q = [];
          i.c = function(args) {
            i.q.push(args)
          };

          w.Intercom = i;

          function l() {
            var s = d.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.src = 'https://widget.intercom.io/widget/' + intercomInfo.appId;
            var x = d.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s,x);
          }

          if (w.attachEvent) {
            w.attachEvent('onload',l);
          } else {
            w.addEventListener('load',l,false);
          }
        }
      })()
    </script>
  {{/if}}
{{/extend}}
